<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Following #<%= @following.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Leader</dt>
              <dd><%= @following.leader_id %></dd>

              <dt>Follower</dt>
              <dd><%= @following.follower_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), followings_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_following_path(@following), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @following, method: :delete, data: { confirm: "Do you really want to delete this following?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
